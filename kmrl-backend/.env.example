# Environment Configuration
NODE_ENV=development
PORT=3000
API_VERSION=v1

# Database Configuration
DATABASE_URL=postgresql://kmrl_user:kmrl_password@localhost:5432/kmrl_db
MONGODB_URI=mongodb://localhost:27017/kmrl-docs
REDIS_URL=redis://localhost:6379
ELASTICSEARCH_URL=http://localhost:9200

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# AWS S3 Configuration (or MinIO for local development)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=kmrl-documents
S3_ENDPOINT=http://localhost:9000

# File Upload Configuration
MAX_FILE_SIZE=20971520
UPLOAD_DIR=./uploads
SUPPORTED_FORMATS=pdf,doc,docx,jpg,jpeg,png,xlsx,dwg,dxf

# AI/ML Configuration
PYTHON_ML_SERVICE_URL=http://localhost:8000
OCR_CONFIDENCE_THRESHOLD=0.9
CLASSIFICATION_CONFIDENCE_THRESHOLD=0.85

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# CORS Configuration
FRONTEND_URL=http://localhost:3001
ALLOWED_ORIGINS=http://localhost:3001,https://kmrl-frontend.vercel.app

# Processing Configuration
MAX_CONCURRENT_JOBS=100
PROCESSING_TIMEOUT_MS=120000
QUEUE_REDIS_URL=redis://localhost:6379/1

# Monitoring
HEALTH_CHECK_INTERVAL=30000
METRICS_UPDATE_INTERVAL=30000